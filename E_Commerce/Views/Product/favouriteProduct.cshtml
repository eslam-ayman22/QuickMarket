@model IEnumerable<Favourite>

    @{
    ViewData["Title"] = "Favorite Products";
    }

    <div class="container my-5">
        <h1 class="text-center mb-4 display-6 fw-bold text-primary">Your Favorite Products</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <!-- Product Image -->
                    <img src="~/images/@item.product.Img" class="card-img-top" alt="@item.product.Name" style="height: 200px; object-fit: cover;">

                    <!-- Product Details -->
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.product.Name</h5>
                        <p class="card-text text-muted">@item.product.Description</p>
                        <h4 class="text-success mb-3">$@item.product.Price</h4>
                        <div>
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-star-fill"></i> @item.product.Rate
                            </span>
                        </div>
                        <div class="mt-3">
                            <a href="/Product/Detals/@item.product.ProductId" class="btn btn-primary me-2">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <a asp-action="Remove" asp-controller="Product" asp-route-id="@item.product.ProductId"  class="btn btn-outline-danger">
                                <i class="bi bi-heart-fill"></i> Remove from Favorites
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>

    <!-- Include Styling -->
    <style>
        .card {
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.2);
            }

            .card img {
                border-top-left-radius: 15px;
                border-top-right-radius: 15px;
            }

        .card-title {
            color: #333;
        }

        .badge {
            font-size: 14px;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }
    </style>

