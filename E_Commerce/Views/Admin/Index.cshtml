

<!DOCTYPE html>
<html lang="en">

@{
    Layout = "_dashboardlayout";
}
@if (TempData["stats"] != null)
{
    <div id="tempDataMessage" class="alert alert-success">
        @TempData["stats"]
    </div>
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background-color: #f1f2f6;
            overflow-x: hidden;
        }

        .navbar-custom {
            background-color: #2c3e50;
            color: #fff;
            padding: 15px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-custom a {
                color: white;
                text-decoration: none;
            }

                .navbar-custom a:hover {
                    text-decoration: underline;
                }

        .content-wrapper {
            padding: 30px;
            background-color: #f9f9f9;
            min-height: calc(100vh - 70px);
        }

        .dashboard-stat {
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            color: white;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .dashboard-stat h3 {
                margin: 0;
                font-weight: bold;
                font-size: 2rem;
            }

            .dashboard-stat p {
                margin: 0;
                font-size: 1.2rem;
            }

            .dashboard-stat.bg-primary {
                background-color: #007bff;
            }

            .dashboard-stat.bg-success {
                background-color: #28a745;
            }

            .dashboard-stat.bg-danger {
                background-color: #dc3545;
            }

            .dashboard-stat.bg-warning {
                background-color: #ffc107;
            }

        .card {
            border-radius: 10px;
            margin: 20px 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            border-radius: 10px 10px 0 0;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Admin/Create">Create New Category</a>
                <div>
                    <form asp-action="Search" asp-controller="Admin" >
                        <input type="search" placeholder="Search Our Category"></input>
                        <input type="submit" value="Search"></input>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container-fluid content-wrapper">
        <!-- Dashboard Stats -->
        <div class="row">
            <div class="col-md-3">
                <div class="dashboard-stat bg-primary">
                    <h3>@ViewBag.UserCount</h3>
                    <p>Users</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-stat bg-success">
                    <h3>@ViewBag.OrderCount</h3>
                    <p>Orders</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-stat bg-danger">
                    <h3>@ViewBag.ProductCount</h3>
                    <p>Products</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-stat bg-warning">
                    <h3>@ViewBag.CategoryCount</h3>
                    <p>Category</p>
                </div>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                Recent Activities
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-hover shadow-sm">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Category Id</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    
                                    <a href="/Category/Edit/@item.CategoryId" class="btn btn-success">Edit</a>
                                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.CategoryId">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this category?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteButton" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Pass the CategoryId to the delete button in the modal
    const deleteModal = document.getElementById('deleteModal');
    const confirmDeleteButton = document.getElementById('confirmDeleteButton');

    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget; // Button that triggered the modal
        const categoryId = button.getAttribute('data-id'); // Extract info from data-* attribute
        confirmDeleteButton.href = `/Admin/Delete/${categoryId}`; // Set the href of the delete button
    });
</script>

</html>

