@model IEnumerable<Product>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-5">Discover Our Products</h2>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <!-- Product Card -->
                <div class="card shadow-sm border-0 h-100 position-relative" style="border-radius: 15px;">
                    <!-- Favorite Icon -->
                    <a asp-controller="Product" asp-action="favouriteProduct" asp-route-id="@item.ProductId" class="btn btn-light position-absolute top-0 end-0 m-2 p-2" style="z-index: 10; border-radius: 50%;">
                        <i class="bi bi-heart-fill text-danger"></i>
                    </a>
                    <!-- Product Image -->
                    <div class="card-img-wrapper" style="position: relative; height: 300px;">
                        <img src="~/images/@item.Img" class="card-img-top" alt="Product Image" style="border-top-left-radius: 15px; border-top-right-radius: 15px; width: 100%; height: 100%; object-fit: contain;">
                    </div>
                    <!-- Product Details -->
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <h4 class="text-primary mb-4 fw-bold">@item.Price EGP</h4>
                        <div class="d-flex gap-2 justify-content-center">
                            <a asp-controller="Cart" asp-action="Pay" class="btn btn-primary btn-custom">Buy Now</a>
                            <a asp-controller="Cart" asp-action="Index" asp-route-id="@item.ProductId" class="btn btn-outline-primary btn-custom-outline">Add to Cart</a>
                            <a href="/Product/Detals/@item.ProductId" class="btn btn-secondary btn-custom-secondary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Styling -->
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
        background: #f7f7f7;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

    .card-img-wrapper {
        overflow: hidden;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        position: relative;
    }

        .card-img-wrapper img {
            transition: transform 0.5s ease;
            object-fit: contain; /* Ensures the image is fully visible */
        }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .btn-custom, .btn-custom-outline, .btn-custom-secondary {
        border-radius: 30px;
        font-weight: bold;
        padding: 10px 20px;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
    }

    .btn-custom {
        background-color: #007bff;
        color: #fff;
    }

        .btn-custom:hover {
            background-color: #0056b3;
            transform: scale(1.1);
        }

    .btn-custom-outline {
        border: 2px solid #007bff;
        color: #007bff;
    }

        .btn-custom-outline:hover {
            background-color: #007bff;
            color: #fff;
            transform: scale(1.1);
        }

    .btn-custom-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-custom-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.1);
        }

    h2 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        letter-spacing: 1px;
    }
</style>
