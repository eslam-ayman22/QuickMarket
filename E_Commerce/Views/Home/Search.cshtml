@model IEnumerable<Product>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-5">Search Results</h2>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <!-- Product Card -->
                <div class="card shadow-lg border-0 h-100 position-relative" style="border-radius: 20px; overflow: hidden;">
                    <!-- Favorite Icon -->
                    <a asp-controller="Product" asp-action="favouriteProduct" asp-route-id="@item.ProductId" class="btn btn-light position-absolute top-0 end-0 m-2 p-2" style="z-index: 10; border-radius: 50%;">
                        <i class="bi bi-heart-fill text-danger"></i>
                    </a>
                    <!-- Product Image -->
                    <div class="card-img-wrapper" style="position: relative; height: 250px; background: linear-gradient(to bottom, #f7f7f7, #eaeaea);">
                        <img src="~/images/@item.Img" class="card-img-top" alt="Product Image" style="width: 100%; height: 100%; object-fit: contain; transition: transform 0.5s ease;">
                    </div>
                    <!-- Product Details -->
                    <div class="card-body text-center p-4">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <h4 class="text-success mb-4 fw-bold">@item.Price EGP</h4>
                        <div class="d-flex gap-2 justify-content-center">
                            <a asp-controller="Cart" asp-action="Pay" class="btn btn-success btn-custom">Buy Now</a>
                            <a asp-controller="Cart" asp-action="Index" asp-route-id="@item.ProductId" class="btn btn-outline-success btn-custom-outline">Add to Cart</a>
                            <a href="/Product/Detals/@item.ProductId" class="btn btn-dark btn-custom-secondary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Styling -->
<style>
    /* General Card Styling */
    .card {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border-radius: 20px;
        background: linear-gradient(to bottom, #ffffff, #f7f7f7);
        overflow: hidden;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.2);
        }

    /* Image Hover Effect */
    .card-img-wrapper {
        overflow: hidden;
    }

        .card-img-wrapper img {
            object-fit: contain;
            transition: transform 0.5s ease;
        }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    /* Button Custom Styling */
    .btn-custom, .btn-custom-outline, .btn-custom-secondary {
        border-radius: 30px;
        font-weight: bold;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

    .btn-custom {
        background-color: #28a745;
        color: #fff;
    }

        .btn-custom:hover {
            background-color: #218838;
            transform: scale(1.1);
        }

    .btn-custom-outline {
        border: 2px solid #28a745;
        color: #28a745;
    }

        .btn-custom-outline:hover {
            background-color: #28a745;
            color: #fff;
            transform: scale(1.1);
        }

    .btn-custom-secondary {
        background-color: #343a40;
        color: #fff;
    }

        .btn-custom-secondary:hover {
            background-color: #23272b;
            transform: scale(1.1);
        }

    /* Heading Styling */
    h2 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        letter-spacing: 1px;
        position: relative;
    }

        h2::after {
            content: "";
            display: block;
            width: 60px;
            height: 4px;
            background-color: #28a745;
            margin: 10px auto 0;
        }

    /* Hover Effect on Favorite Icon */
    .btn-light i {
        transition: color 0.3s ease;
    }

    .btn-light:hover i {
        color: #ff4d4d;
    }
</style>
